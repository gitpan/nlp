
@SET_MAKE@
SHELL           = /bin/sh

top_srcdir      = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@

INSTALL         = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA    = @INSTALL_DATA@

prefix          = @prefix@
exec_prefix     = @exec_prefix@
bindir          = @bindir@
libdir          = @libdir@
man1dir         = @man1dir@
man1ext         = @man1ext@
tmpdir          = @tmpdir@

# ---

includedir=$(libdir)/include
sampledir=$(libdir)/example

_GETDISTINFO = \
	_version=`$(top_srcdir)/etc/newvers -lperl -d src/libVers.pl`; \
	_date=`date '+%y%m%d'`;

_BUILDDIST = \
	_cwd=`pwd`; \
	echo "Creating tarball..."; \
	cd $(top_srcdir); \
	tar cvf - * |\
	tardy --user_number=1000  --user_name=laby \
	      --group_number=1000 --group_name=laby \
		  --prefix=$${_distname} - |\
	gzip >$${_tarball}; \
	echo "Done"; \
	cd $$_cwd; ls -l $${_tarball};

all:
	cd src; $(MAKE)

dist: distclean
	@$(_GETDISTINFO) \
	_distname="nlp-$${_version}"; \
	_tarball="../web/distrib/$${_distname}.tar.gz"; \
	echo "Release Distribution: NLP Version $$_version"; \
	$(_BUILDDIST)

snap: distclean
	@$(_GETDISTINFO) \
	_distname="nlp-$${_version}-$${_date}-SNAP"; \
	_tarball="../web/distrib/$${_distname}.tar.gz"; \
	echo "Snap of whole source tree: NLP Version $$_version as of $$_date"; \
	$(_BUILDDIST)

install:
	cd src; $(MAKE) install

clean:
	cd src; $(MAKE) clean
	
distclean:
	cd config; $(MAKE) distclean
	cd src; $(MAKE) distclean
	./etc/fixdist -u
	rm -f Makefile

